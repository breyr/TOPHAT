{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "common/*": [
                "../common/src/*"
            ]
        },
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}